<TimeSelectionScreen>
    Image:
        source: 'cpto3.jpg'

    MDLabel:
        id: appname_label4
        text: "Aplikace pro správu klíčů CPTO"
        font_size: 40
        halign: 'center'
        size_hint_y: None
        height: self.texture_size[1]
        padding_y: 15
        theme_text_color: "Custom"
        text_color: 0.0, .35, .39, 1
        pos_hint: {'top': 0.98}
        bold: True

    MDCard:
        size_hint: None, None
        size: 900, 500
        pos_hint: {"center_x": 0.5, "center_y": 0.5}
        elevation: 1
        padding: 25
        spacing: 25
        orientation: 'vertical'
        md_bg_color: "#ededed"

        GridLayout:
            id: timeselection_gridlayout
            cols: 1
            rows: 4
            size_hint: 1, 1
            pos_hint: {"center_x": 0.5, "y": 1.0}
            spacing: 25
            padding: 25

            MDLabel:
                id: timeselection_topiclabel
                text: "Do kdy chcete klíč vypůjčit?"
                theme_text_color: "Custom"
                text_color: 0.0, .35, .39, 1
                font_size: 32
                size_hint: 1, 0.4
                halign: "center"
                valign: "top"
                pos_hint: {"top": 1.0}
                bold: True
                multiline: False
            
            # vyber a zobrazeni data
            GridLayout:
                id: datepicker_layout
                cols: 2
                rows: 1
                size_hint: 1, 0.2
                pos_hint: {"center_x": 0.5}
                spacing: 50

                MDRoundFlatButton:
                    id: datepicker_button
                    text: "Vybrat datum"
                    text_color: "#FFFFFF"
                    md_bg_color: "#005963"
                    line_color: "#005963"
                    font_size: 24
                    size_hint: 0.5, 0.5
                    on_release: app.show_date_picker()

                MDLabel:
                    id: datepicker_label
                    text: "Nebylo vybráno žádné datum"
                    font_size: 24
                    theme_text_color: "Custom"
                    text_color: 0.0, .35, .39, 1
                    size_hint: 0.5, 0.5
                    valign: "bottom"

            # vyber a zobrazeni casu
            GridLayout:
                id: timepicker_layout
                cols: 2
                rows: 1
                size_hint: 1, 0.2
                pos_hint: {"center_x": 0.5}
                spacing: 50

                MDRoundFlatButton:
                    id: timepicker_button
                    text: "Vybrat čas"
                    text_color: "#FFFFFF"
                    md_bg_color: "#005963"
                    line_color: "#005963"
                    font_size: 24
                    size_hint: 0.5, 0.5
                    on_release: app.show_time_picker()

                MDLabel:
                    id: timepicker_label
                    text: "Nebyl vybrán žádný čas"
                    font_size: 24
                    theme_text_color: "Custom"
                    text_color: 0.0, .35, .39, 1
                    size_hint: 0.5, 0.5
                    valign: "bottom"

            MDRoundFlatButton:
                id: timeselection_confirmbutton
                text: "Potvrdit čas"
                text_color: "#FFFFFF"
                md_bg_color: "#005963"
                line_color: "#005963"
                font_size: 24
                size_hint: 1, 0.5
                pos_hint: {"center_X": 0.75}
                on_release: root.confirm_timestamps()


